<h1>List of Cocktails:</h1>
<ul>
<% @cocktails.each do |cocktail| %>
<li> <%= link_to "#{cocktail.name}", cocktail_path(cocktail) %></li>
(<%= link_to "Delete", cocktail_path(cocktail), data: {:confirm => 'Are you sure?'}, method: :delete %>)
<% end %>
</ul>

<%= link_to new_cocktail_path do %>
  <span class="btn btn-primary">New Cocktail</span>
<% end %>
